<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollview_events_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_event_detail_main"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/steampunk_room" />

            <TextView
                android:id="@+id/txt_event_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="32dp"
                android:paddingTop="16dp"
                android:paddingEnd="32dp"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_event_detail_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="32dp"
                android:paddingTop="8dp"
                android:paddingEnd="32dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textStyle="italic" />

            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:id="@+id/txt_event_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                app:trimExpandedText="Ver mÃ¡s"
                app:trimCollapsedText="Ver menos"
                app:trimMode="trimModeLine"
                app:trimLength="4"
                app:colorClickableText="@color/primary"
                android:paddingTop="8dp"
                android:text="Lorem ipsum muy largo Lorem ipsum muy largo Lorem ipsum muy largo Lorem ipsum muy largo Lorem ipsum muy largo Lorem ipsum muy largo Lorem ipsum muy largo Lorem ipsum muy largo Lorem ipsum muy largo Lorem ipsum muy largo Lorem ipsum muy largo Lorem ipsum muy largo Lorem ipsum muy largo "/>

            <View
                android:id="@+id/divider9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>